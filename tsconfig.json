{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2017",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "strict": true,
        "declaration": true,
        "outDir": "dist",
    },
    "include": [
        "src/**/*",
        "./package.json"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}